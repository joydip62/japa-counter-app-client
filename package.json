{
  "name": "japa-count-app",
  "version": "0.0.1",
  "description": "this is a japa counter app",
  "main": "main.js",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "start": "electron .",
    "dev:watch": "npx electronmon --trace-warnings .",
    "dist": "electron-builder"
  },
  "keywords": [
    "electron",
    "react"
  ],
  "author": "JagannathaPT",
  "license": "MIT",
  "devDependencies": {
    "electron": "^36.4.0",
    "electron-builder": "^26.0.12"
  },
  "build": {
    "appId": "com.yourdomain.japacounter",
    "productName": "Japa Counter",
    "asar": false,
    "files": [
      "main.js",
      "preload.js",
      "japa-app/build/**/*",
      "icon/**/*"
    ],
    "extraResources": [
      {
        "from": "icon",
        "to": "icon"
      }
    ],
    "win": {
      "icon": "icon/japa.ico"
    }
  }
}
